{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["./dist"]
    },
    "code:lint": {},
    "i18n:lint": {},
    "i18n:sync": {
      "outputs": ["./public/locales/*"]
    },
    "code:lint:autofix": {},
    "check-types": {},
    "test": {},
    "code:check": {
      "dependsOn": ["code:lint", "i18n:lint", "check-types"]
    },
    "start:dev": {
      "persistent": true,
      "cache": false
    }
  }
}
